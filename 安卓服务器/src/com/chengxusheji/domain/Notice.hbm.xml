<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="Notice" table="Notice">

          <!-- 主键公告id -->
          <id name="noticeId" column="noticeId">
            <generator class="native"/>
          </id>

          <!-- 简单字符串属性: 公告标题 -->
          <property
            name="noticeTitle"
            column="noticeTitle"
            type="string"
            length="60"
          />

          <!-- 简单字符串属性: 公告内容 -->
          <property
            name="noticeContent"
            column="noticeContent"
            type="string"
            length="500"
          />

          <!-- 简单字符串属性: 公告时间 -->
          <property
            name="noticeTime"
            column="noticeTime"
            type="string"
            length="20"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
